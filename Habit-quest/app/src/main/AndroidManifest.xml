<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitQuest"
        tools:targetApi="35">

        <service
            android:name=".presentation.services.AllianceNotificationService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <receiver
            android:name=".presentation.receivers.AllianceInviteReceiver"
            android:exported="true" />

        <receiver
            android:name=".presentation.receivers.NotificationDismissReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.habitquest.NOTIFICATION_DISMISSED" />
            </intent-filter>
        </receiver>


        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.activities.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="habitquest" android:host="addfriend" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.activities.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.activities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="false" />

        <provider
            android:name=".data.local.provider.DBContentProvider"
            android:authorities="com.example.habitquest"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
