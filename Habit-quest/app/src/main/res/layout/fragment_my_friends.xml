<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.fragments.MyFriendsFragment">

    <LinearLayout
        android:id="@+id/layoutFriendRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="8dp"
        android:foreground="?attr/selectableItemBackground">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp">

            <View
                android:id="@+id/placeholderCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background" />

            <ImageView
                android:id="@+id/imgRequestsAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:clipToOutline="true"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/tvRequestsBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:background="@drawable/badge_background"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRequestsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friendRequests"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvRequestsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approveIgnoreRequests"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnCreateAlliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createAlliance"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvMyFriendsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myFriends"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvFriendsPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriends"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:listitem="@layout/item_friend" />

</LinearLayout>
