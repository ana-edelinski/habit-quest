<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_boss_section">

    <TextView
        android:id="@+id/tvBossTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚔️ Boss Challenge!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imgBoss"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/boss_level_1"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvBossDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A new boss has appeared!"
        android:textAlignment="center"
        android:textColor="@color/grayDark"
        android:textSize="15sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/tvBossLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can enter boss fight in Level Progress Section"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnActivateEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate Equipment"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btnFightNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fight Now"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>
