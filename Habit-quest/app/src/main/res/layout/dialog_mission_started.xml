<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieMissionStarted"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/mission_started"
        app:lottie_autoPlay="true"
        app:lottie_loop="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mission Started!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:textColor="@color/darkGreen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can track your alliance mission in the 'Special Missions' section."
        android:textAlignment="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnGoToMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go now"
            android:backgroundTint="@color/darkGreen"
            android:textAllCaps="false"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Later"
            android:textAllCaps="false"
            android:backgroundTint="@color/darkGreen" />
    </LinearLayout>

</LinearLayout>
