<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Poruka kad nije u savezu -->
    <LinearLayout
        android:id="@+id/layoutNoAlliance"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNoAllianceMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join an alliance to solve special missions."
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnJoinAlliance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Alliance"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorPrimary" />
    </LinearLayout>

    <!-- Poruka kad postoji savez ali nema aktivne misije -->
    <LinearLayout
        android:id="@+id/layoutNoMission"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvNoMissionMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact your alliance leader to start a mission."
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnShowLastResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show last mission result"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/darkGreen"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>

    <!-- ðŸ”¹ Prikaz aktivne misije -->
    <ScrollView
        android:id="@+id/layoutMissionActive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgBoss"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/boss_level_4"
                android:contentDescription="Boss image"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvBossHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP: 1000 / 1000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <ProgressBar
                android:id="@+id/progressBossHp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginHorizontal="24dp"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/red"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvMissionTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â³ 00:00:00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/orbitron_regular"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="24dp"
                android:elevation="6dp" />

            <TextView
                android:id="@+id/tvUserProgressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your contribution:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <ProgressBar
                android:id="@+id/progressUserHp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginHorizontal="24dp"
                android:max="100"
                android:progressTint="@color/darkGreen"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvUserDamage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You dealt 48 HP damage"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnAllianceProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Alliance Progress"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
