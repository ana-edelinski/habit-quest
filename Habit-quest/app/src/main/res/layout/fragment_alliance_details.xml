<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAllianceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alliance Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/tvAllianceLeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leader: John Doe"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Members:"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllianceMembers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnStartMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Special Mission"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/darkGreen"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnOpenChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Alliance Chat"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/darkGreen" />


    <Button
        android:id="@+id/btnInviteMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite Members"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:backgroundTint="@color/darkGreen" />

    <Button
        android:id="@+id/btnLeaveAlliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Alliance"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:backgroundTint="@color/darkGreen" />

    <Button
        android:id="@+id/btnDisbandAlliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disband Alliance"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/darkGreen"
        android:visibility="gone" />

</LinearLayout>
