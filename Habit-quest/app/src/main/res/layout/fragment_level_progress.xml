<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- Avatar / Titula -->
        <ImageView
            android:id="@+id/ivTitleIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_trophy"
            android:layout_marginBottom="12dp" />
<!-- android:contentDescription="@string/level_title"-->
        <!-- android:tint="@color/greenShadeDark" -->

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novice Explorer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Trenutni nivo -->
        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 5"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- android:textColor="@color/grayDark" -->

        <!-- Progress bar XP -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressXP"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progress="40"
            app:indicatorColor="@color/greenShadeDark"

            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
            android:layout_marginBottom="8dp"/>
        <!-- app:trackColor="@color/grayLight"-->

        <!-- XP brojke -->
        <TextView
            android:id="@+id/tvXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Broj PP (poena) -->
        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points: "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Bonus nagrada / novčići -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coin"
                android:contentDescription="Coins"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coins: "
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
