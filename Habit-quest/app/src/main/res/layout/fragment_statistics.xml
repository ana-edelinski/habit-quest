<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- ðŸ”¹ Active Days -->
        <TextView
            android:id="@+id/txtActiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_streak"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ”¹ Longest Streak -->
        <TextView
            android:id="@+id/txtLongestStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longest_streak"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartTasks"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="36dp" />

        <!-- ðŸ”¹ Done by Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done by Category"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="2dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartCategories"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="1dp" />

        <!-- ðŸ”¹ Average XP per Completed Task -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Difficulty of Completed Tasks [XP]"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartAvgDifficulty"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="36dp" />

        <!-- ðŸ”¹ XP Earned in Last 7 Days -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XP Earned in Last 7 Days"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartXP7Days"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”¹ Special Missions -->
        <TextView
            android:id="@+id/txtMissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_missions"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
