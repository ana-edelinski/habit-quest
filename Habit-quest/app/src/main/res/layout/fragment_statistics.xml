<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- ðŸ”¹ Active Days -->
        <TextView
            android:id="@+id/txtActiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_streak"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ”¹ Longest Streak -->
        <TextView
            android:id="@+id/txtLongestStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longest_streak"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- ðŸ”¹ Donut Chart: Tasks by Status -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartTasks"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”¹ Bar Chart: Tasks by Category -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartCategories"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”¹ Line Chart: Average XP -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartAvgDifficulty"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”¹ Line Chart: XP in Last 7 Days -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartXP7Days"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”¹ Special Missions -->
        <TextView
            android:id="@+id/txtMissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_missions"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
