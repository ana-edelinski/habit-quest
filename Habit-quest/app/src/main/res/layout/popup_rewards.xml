<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_popup"
    android:padding="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp">

    <TextView
        android:id="@+id/tvPopupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possible Rewards"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- 🔹 Novčići -->
    <LinearLayout
        android:id="@+id/layoutCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/ivCoinIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_coin"
            android:contentDescription="Coins"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvCoinRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 – 240 coins"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 🔹 Oprema -->
    <LinearLayout
        android:id="@+id/layoutEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivEquipmentIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_equipment"
            android:contentDescription="Equipment"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvEquipmentChance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% chance for equipment (95% clothing / 5% weapon)"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
