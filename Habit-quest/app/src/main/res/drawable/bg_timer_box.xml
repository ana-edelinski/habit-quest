<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Tamnozelena pozadina -->
    <solid android:color="#1B5E20" />

    <!-- Blagi zaobljeni uglovi -->
    <corners android:radius="12dp" />

    <!-- Tanka svetlija ivica -->
    <stroke
        android:width="2dp"
        android:color="#88FFFFFF" />

    <!-- Blaga senka da izgleda izdignuto -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
